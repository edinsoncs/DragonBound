<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lassie Login</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="/static/js/jquery-2.1.4.min.js"></script>
    <script src="/static/js/QTransform.js"></script>
    <script src="/static/DragonBook/DragonBook.min.js?14"></script>
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Lassie Login" />
    <meta property="og:description" content="Log in to Lassie to join your clan and dominate the battlefield!" />
    <meta property="og:image" content="/static/images/lassie-logo.png" />
    <meta property="og:url" content="https://ThorBound.tk/login" />
    <meta property="fb:app_id" content="" />
    <script async src=""></script>
    <script>
        $(function () {
            // Parallax effect for background
            $(window).scroll(function () {
                const scroll = $(window).scrollTop();
                $('.parallax-bg').css('background-position', `center ${scroll * 0.5}px`);
            });
            $('#username').focus();
        });
        // HTTPS redirect
        if (location.protocol === 'http:' && location.host === 'ClassicBound.net') {
            location.replace(location.href.replace('http:', 'https:'));
        }
    </script>
    <style>
        body {
            background: #1a1a1a url('/static/images/aqua_bg.jpg') no-repeat center top fixed;
            background-size: cover;
        }
        .parallax-bg {
            background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('/static/images/aqua_bg.jpg');
            background-attachment: fixed;
            background-position: center top;
            background-size: cover;
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
        }
    </style>
</head>
<body class="bg-black text-white min-h-screen flex flex-col font-sans antialiased relative overflow-x-hidden">
    <div class="parallax-bg"></div>
    <div id="fb-root"></div>
    <!-- Header -->
    <header class="bg-gray-900/90 backdrop-blur-sm shadow-lg sticky top-0 z-40 border-b border-red-900">
        <div class="container mx-auto px-4 py-3 flex flex-col sm:flex-row justify-between items-center">
            <div class="flex items-center space-x-4 mb-4 sm:mb-0">
                <h1>Lassie</h1>
                <nav class="text-sm font-semibold uppercase tracking-wide" role="navigation">
                    <a href="/" class="text-blue-400 hover:text-blue-300 transition-colors duration-200">Lassie</a> >
                    <a href="/login" class="text-blue-400 hover:text-blue-300 transition-colors duration-200">Login</a>
                </nav>
            </div>
            <div class="flex items-center space-x-4 text-sm font-semibold">
                <a href="/register" class="text-yellow-400 hover:text-yellow-300 transition-colors duration-200">Register</a>
            </div>
        </div>
    </header>
    <!-- Main Content -->
    <main class="container mx-auto px-4 py-12 flex-grow flex items-center justify-center relative z-10">
        <div class="w-full max-w-md">
            <div class="bg-gray-800/90 rounded-xl shadow-2xl border border-gray-700 p-6 sm:p-8 relative overflow-hidden">
                <div class="absolute top-0 left-0 w-24 h-24 bg-red-900/50 -translate-y-1/2 rounded-br-full"></div>
                <h2 class="text-2xl sm:text-3xl font-extrabold text-blue-400 mb-6 text-center">Lassie Clan Login</h2>
                <form method="POST" class="space-y-4">
                    <input type="hidden" name="csrfmiddlewaretoken" value="0" />
                    <div>
                        <label for="username" class="block text-sm font-medium text-gray-300 mb-1">Email / UserID / Username</label>
                        <input type="text" id="username" name="username" placeholder="Enter your credentials" maxlength="100" class="w-full bg-gray-700 text-white border border-gray-600 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all duration-200" />
                    </div>
                    <div class="flex items-center">
                        <input type="password" id="pass" name="pass" placeholder="Password" maxlength="100" class="w-full bg-gray-700 text-white border border-gray-600 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all duration-200" />
                        <button type="submit" class="ml-2 bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-500 transition-colors duration-200">Login</button>
                    </div>
                    <div class="text-sm text-gray-400">
                        <a href="/accounts/password/reset" class="text-blue-400 hover:text-blue-300 transition-colors duration-200">Forgot Password?</a>
                    </div>
                </form>
                
            </div>
        </div>
    </main>
    <!-- Footer -->
    <footer class="bg-gray-900/90 backdrop-blur-sm py-4 border-t border-gray-700">
        <div class="container mx-auto px-4 text-center text-sm text-gray-400">
